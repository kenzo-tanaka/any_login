<div class="any_login" style="position: fixed; bottom: 0; left: 0; z-index: 100;">
  <%= image_tag 'any_login/person.png' %>
  <div class="any_login_form_wrapper">
    <% AnyLogin.klasses.each do |klass| %>
      <div>
        <%= form_tag any_login.sign_in_path(as: klass), :method => :post do %>
          <span>
            <%= any_login_select(klass) %>
            <%= any_login_submit %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


